<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.org.arymax.katana.fragment.MakeQuestionFragment">

    <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@android:color/darker_gray"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"
    android:layout_marginTop="69dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/txtTitulo"
        android:textColorHint="@android:color/darker_gray"
        android:hint="Título"
        android:maxLines="1"
        android:background="@android:color/transparent"
        android:layout_marginTop="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/txtPergunta"
        android:textColorHint="@android:color/darker_gray"
        android:hint="Pergunta"
        android:maxLines="30"
        android:background="@android:color/transparent"
        android:layout_marginTop="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="224dp"
        android:layout_below="@+id/txtPergunta"
        android:layout_alignParentStart="true" />

    <view
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        class="android.support.v7.widget.SwitchCompat"
        android:layout_marginStart="27dp"
        android:id="@+id/view8"

        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textView3"/>

    <TextView
        android:text="Modo Anônimo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_marginBottom="73dp"
        android:layout_above="@+id/view8"
        android:layout_alignParentStart="true" />


</RelativeLayout>
